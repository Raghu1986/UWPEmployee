<Page
    x:Class="UWPEmployee.MediaPlayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPEmployee"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:UWPEmployee.Models"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <GridView Name="CourseGridView" Grid.Row="0" ItemsSource="{x:Bind Courses}"  Margin="30,20,0,0"  Background="Transparent" IsItemClickEnabled="True"   >
            <GridView.ItemTemplate>

                <DataTemplate x:DataType="data:Course" >
                    <StackPanel Margin="10,10,10,10"  >
                        <TextBlock Text="{x:Bind CourseType}" Foreground="Black" FontWeight="SemiBold" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Top" />
                        <Ellipse Width="80" Height="80" >
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{x:Bind LogoUri}" Stretch="Uniform" />
                            </Ellipse.Fill>
                        </Ellipse>
                        
                    </StackPanel>
                </DataTemplate>

            </GridView.ItemTemplate>
        </GridView>

        <ListView Name="MediaGridView" Grid.Row="1" ItemsSource="{x:Bind Medias}"  Margin="30,20,0,0"  Background="Transparent" IsItemClickEnabled="True" ItemClick="MediaGridView_ItemClick"   >
            <ListView.ItemTemplate>

                <DataTemplate x:DataType="data:Media" >
                    <StackPanel Margin="10,10,10,10" >
                        <!--<MediaPlayerElement Source="{x:Bind MediaUri}"  />-->
                        <TextBlock Text="{x:Bind Category}" TextWrapping="Wrap" />
                       
                    </StackPanel>
                </DataTemplate>

            </ListView.ItemTemplate>
        </ListView>

        <MediaPlayerElement Grid.Row="2" 
                            Name="MyMediaPlayer"
                            Width="100"
                            Height="100"
                            HorizontalAlignment="Right"
                            AreTransportControlsEnabled="True"
                            
                            />

        <ProgressRing Name="MyCourseProgressRing"
                      Width="50"
                      Height="50"
                      Foreground="Red"
                      Grid.RowSpan="3"
                      RelativePanel.AlignTopWith="EmployeGridView"
                      RelativePanel.AlignVerticalCenterWithPanel="True"
                      RelativePanel.AlignHorizontalCenterWithPanel="True"                          
                          />

    </Grid>
</Page>
